<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/pokedex"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="¡Bienvenido entrenador!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="25sp" />

    <EditText
    android:id="@+id/edtUsuario"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:hint="Ash"
    android:textColor="#000000"
    android:textSize="25sp" />

    <TextView
        android:id="@+id/txtContrasenia"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edtContrasenia"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="pikachu"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/bntLogin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/img_pokebola"
        android:text="Login" />


</LinearLayout>